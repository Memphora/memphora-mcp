{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.github.Memphora/memphora",
  "description": "Add persistent memory to AI assistants. Store and recall info across conversations.",
  "repository": {
    "url": "https://github.com/Memphora/memphora-mcp",
    "source": "github"
  },
  "version": "0.1.2",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "memphora-mcp",
      "version": "0.1.2",
      "runtime": "python",
      "runtimeArguments": [
        {"value": "-m"},
        {"value": "memphora_mcp.server"}
      ],
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "MEMPHORA_API_KEY",
          "description": "Your Memphora API key from memphora.ai/dashboard",
          "isRequired": true,
          "isSecret": true
        },
        {
          "name": "MEMPHORA_USER_ID",
          "description": "Unique identifier for your memories",
          "isRequired": false,
          "isSecret": false
        }
      ]
    }
  ]
}
